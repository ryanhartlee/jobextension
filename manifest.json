{
    "manifest_version": 2,
    "name": "Job Ninja",
    "description": "Find a job based on the site you're on.",
    "version": "0.3",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*"
    ]
}
